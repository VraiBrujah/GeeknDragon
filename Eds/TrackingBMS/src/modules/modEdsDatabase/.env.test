# Configuration de test local - TrackingBMS modEdsDatabase
# Mode: Développement sans Docker

# === Base de Données ===
# Option 1: SQLite pour tests locaux (recommandé sans Docker)
DATABASE_URL=sqlite:///./trackingbms_test.db
DATABASE_TYPE=sqlite

# Option 2: PostgreSQL local (si installé)
# DATABASE_URL=postgresql://postgres:password@localhost:5432/trackingbms_test
# DATABASE_TYPE=postgresql

DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# === API Configuration ===
API_HOST=0.0.0.0
API_PORT=8001
API_ENV=test
API_DEBUG=true
API_RELOAD=true

# === Sécurité ===
JWT_SECRET_KEY=test-super-secret-jwt-token-with-at-least-32-characters-long-for-development
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# === Cache (optionnel sans Docker) ===
# Redis désactivé pour tests locaux
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=false

# === Logging ===
LOG_LEVEL=DEBUG
LOG_FORMAT=text

# === Tests ===
TESTING=true
TEST_DATABASE_URL=sqlite:///./test.db

# === Supabase Local (désactivé pour tests) ===
SUPABASE_URL=http://localhost:54321
SUPABASE_ANON_KEY=test-anon-key
SUPABASE_SERVICE_KEY=test-service-key
SUPABASE_ENABLED=false