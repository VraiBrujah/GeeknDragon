{
    "name": "geekndragon/ecommerce-native",
    "description": "Système e-commerce natif avec intégration Snipcart transparente",
    "type": "project",
    "require": {
        "php": "^8.0",
        "stripe/stripe-php": "^14.0",
        "guzzlehttp/guzzle": "^7.0",
        "monolog/monolog": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "prefer-stable": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "scripts": {
        "post-install-cmd": [
            "@php -r \"copy('.env.example', '.env');\""
        ]
    }
}