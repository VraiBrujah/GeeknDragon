# Configuration Admin - Geek&Dragon
# IMPORTANT: Ne jamais commiter ce fichier sur Git

# Identifiants Administrateur
ADMIN_USERNAME=
ADMIN_PASSWORD=!

APP_ENV=production

# Configuration de Sécurité
ADMIN_SESSION_TIMEOUT=3600
ADMIN_MAX_LOGIN_ATTEMPTS=5
ADMIN_LOCKOUT_DURATION=900

# Clés API Snipcart (à configurer avec vos vraies clés)
SNIPCART_API_KEY=
SNIPCART_SECRET_KEY=

# Configuration Base de Données (pour futures fonctionnalités)
DB_HOST=localhost
DB_NAME=geekndragon
DB_USERNAME=
DB_PASSWORD=

# Clés de Sécurité
SESSION_SECRET=
CSRF_SECRET=

# Configuration Email (pour notifications admin)
SMTP_HOST=mail.geekndragon.com
SMTP_PORT=465
SMTP_USERNAME=commande@geekndragon.com
SMTP_PASSWORD=
ADMIN_EMAIL=admin@geekndragon.com

# Paramètres de Modération
AUTO_APPROVE_COMMENTS=false
MAX_COMMENT_LENGTH=1000
REQUIRE_EMAIL_VERIFICATION=true