# Configuration Apache pour le visualiseur de manuscrits
# Sécurité et optimisation

# Désactiver listing des répertoires
Options -Indexes

# Page par défaut
DirectoryIndex index.php

# Protection des fichiers sensibles
<FilesMatch "^(README\.md|\.gitignore|\.env)$">
  Order allow,deny
  Deny from all
</FilesMatch>

# Headers de sécurité
<IfModule mod_headers.c>
  # Protection XSS
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "DENY"
  Header set X-XSS-Protection "1; mode=block"

  # Référer policy
  Header set Referrer-Policy "no-referrer-when-downgrade"
</IfModule>

# Compression Gzip pour performance
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/css text/javascript application/javascript application/json
</IfModule>

# Cache des assets statiques
<IfModule mod_expires.c>
  ExpiresActive On

  # CSS et JS : 1 semaine
  ExpiresByType text/css "access plus 1 week"
  ExpiresByType text/javascript "access plus 1 week"
  ExpiresByType application/javascript "access plus 1 week"

  # Fichiers markdown : pas de cache (peuvent être modifiés)
  ExpiresByType text/markdown "access plus 0 seconds"
</IfModule>

# Réécriture URL (si mod_rewrite disponible)
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /Livre/

  # Rediriger index.html vers index.php
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteRule ^index\.html$ index.php [L,R=301]
</IfModule>

# Protection contre hotlinking des fichiers markdown
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteCond %{HTTP_REFERER} !^$
  RewriteCond %{HTTP_REFERER} !^https?://(www\.)?geekndragon\. [NC]
  RewriteCond %{HTTP_REFERER} !^https?://localhost [NC]
  RewriteRule \.(md)$ - [F,L]
</IfModule>

# Encodage UTF-8 par défaut
AddDefaultCharset UTF-8

# Types MIME corrects
<IfModule mod_mime.c>
  AddType text/markdown .md
  AddType application/json .json
</IfModule>
