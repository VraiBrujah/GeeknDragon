{
  "name": "geekndragon",
  "version": "1.0.0",
  "description": "Site web Geek&Dragon",
  "main": "index.js",
  "scripts": {
    "build": "tailwindcss -i css/src/styles.css -o css/styles.css --minify",
    "bundle:css": "npx clean-css-cli -o css/vendor.bundle.min.css css/swiper-bundle.min.css css/fancybox.css",
    "bundle:js": "npx terser js/swiper-bundle.min.js js/fancybox.umd.js -c -m -o js/vendor.bundle.min.js",
    "bundle": "npm run bundle:css && npm run bundle:js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/base-widget.test.js tests/widget-state-manager.test.js tests/sync-manager.test.js",
    "test:e2e": "playwright test",
    "lint": "eslint core/base-widget.js core/widget-state-manager.js core/sync-manager.js tests/base-widget.test.js tests/widget-state-manager.test.js tests/sync-manager.test.js",
    "format": "prettier --write .",
    "build:location": "NODE_ENV=production postcss css/location.css -o css/location.min.css"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "autoprefixer": "^10.4.21",
    "cssnano": "^6.1.2",
    "dompurify": "^3.2.6",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^26.1.0",
    "lz-string": "^1.5.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.17"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "y-indexeddb": "^9.0.12",
    "y-websocket": "^3.0.0",
    "yjs": "^13.6.27"
  }
}
