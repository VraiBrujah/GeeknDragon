{
  "name": "geekndragon",
  "version": "1.0.0",
  "description": "Site web Geek&Dragon",
  "main": "index.js",
  "scripts": {
    "bundle:css": "npx clean-css-cli -o css/vendor.bundle.min.css css/swiper-bundle.min.css css/fancybox.css",
    "bundle:js": "npx terser js/swiper-bundle.min.js js/fancybox.umd.js -c -m -o js/vendor.bundle.min.js",
    "bundle": "npm run bundle:css && npm run bundle:js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/base-widget.test.js tests/widget-state-manager.test.js tests/sync-manager.test.js tests/rich-text-widget.test.js tests/canvas-widget.test.js tests/drag-drop-manager.test.js tests/section-layout.test.js",
    "test:e2e": "playwright test",
    "lint": "eslint core/base-widget.js core/section.js core/widget-state-manager.js core/sync-manager.js tests/base-widget.test.js tests/section-layout.test.js tests/widget-state-manager.test.js tests/sync-manager.test.js",
    "format": "prettier --write .",
    "build:location": "NODE_ENV=production postcss css/location.css -o css/location.min.css",
    "build:tokens": "style-dictionary build --config style-dictionary.config.json",
    "build:css": "tailwindcss -i css/src/styles.css -o css/styles.css --minify",
    "dev": "vite",
    "build": "npm run build:css && vite build"
  },
  "keywords": [],
