{
  "name": "geekndragon",
  "version": "1.0.0",
  "description": "Site web Geek&Dragon",
  "main": "index.js",
  "scripts": {
    "build": "tailwindcss -i css/src/styles.css -o css/styles.css --minify",
    "build:complete": "node scripts/build-simple.cjs",
    "build:css": "npm run build && node scripts/build-complete.js --css-only",
    "build:js": "node scripts/build-complete.js --js-only",
    "bundle:css": "npx clean-css-cli -o css/vendor.bundle.min.css css/swiper-bundle.min.css css/fancybox.css",
    "bundle:js": "npx terser js/swiper-bundle.min.js js/fancybox.umd.js -c -m -o js/vendor.bundle.min.js",
    "minify:all": "npm run build:complete",
    "optimize:js": "npx terser js/app.js js/currency-converter.js js/coin-lot-optimizer.js -c -m -o js/app.bundle.min.js",
    "optimize:all": "npm run optimize:js && npm run bundle",
    "compress": "node scripts/optimize-assets.js",
    "validate": "node scripts/validate-optimization.js",
    "test:converter": "node scripts/test-currency-converter.js",
    "optimize:performance": "node scripts/optimize-performance.js",
    "optimize:js-advanced": "node scripts/optimize-js-advanced.js",
    "deploy:prep": "npm run build:complete && npm run compress && npm run validate",
    "production:build": "npm run build:complete",
    "bundle": "npm run bundle:css && npm run bundle:js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "lint": "eslint js --fix",
    "lint:ts": "tsc --noEmit",
    "scss:build": "sass scss/main.scss:css/geekndragon-compiled.css --style=compressed",
    "scss:watch": "sass scss/main.scss:css/geekndragon-compiled.css --watch",
    "ts:build": "tsc",
    "ts:watch": "tsc --watch",
    "dev": "concurrently \"npm run scss:watch\" \"npm run ts:watch\"",
    "audit:security": "npm audit --audit-level=moderate",
    "validate:types": "tsc --noEmit --project tsconfig.json",
    "docs:api": "swagger-codegen generate -i api/openapi.yaml -l html2 -o docs/api",
    "build:minified": "node scripts/build-minified.js",
    "video:check": "node scripts/optimize-videos.js --check",
    "video:report": "node scripts/optimize-videos.js --report",
    "video:compress": "node scripts/optimize-videos.js --compress",
    "performance:full": "npm run production:build && npm run video:report && npm run compress",
    "audit:media": "node scripts/audit-unused-media.cjs",
    "cleanup:media": "node scripts/safe-media-cleanup.cjs",
    "optimize:images": "node scripts/optimize-images.cjs",
    "optimize:images:auto": "node scripts/auto-optimize-images.cjs",
    "optimize:master": "node scripts/master-optimize.cjs",
    "optimize:complete": "npm run optimize:master",
    "pre-deploy": "node scripts/pre-deploy-check.cjs",
    "deploy": "npm run pre-deploy && npm run deploy:prep",
    "fonts:fetch": "node scripts/fetch-fonts.cjs",
    "test:contact": "php tests/test-contact-form.php",
    "audit:lighthouse": "node scripts/lighthouse-audit.js"
  },
  "fonts": {
    "sources": [
      "https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Cinzel:wght@400;600;700&display=swap"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.21",
    "clean-css-cli": "^5.6.2",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.32.0",
    "gzipper": "^7.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.6",
    "sass": "^1.71.0",
    "tailwindcss": "^3.4.17",
    "terser": "^5.24.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3",
    "lighthouse": "^12.0.0",
    "chrome-launcher": "^1.1.0"
  }
}
