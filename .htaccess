# Sécurité générale
<IfModule mod_headers.c>
    # Empêcher l'affichage dans un iframe (protection clickjacking)
    Header always append X-Frame-Options SAMEORIGIN
    
    # Activer la protection XSS du navigateur
    Header always set X-XSS-Protection "1; mode=block"
    
    # Empêcher le MIME sniffing
    Header always set X-Content-Type-Options nosniff
    
    # Politique de référent restrictive
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Strict Transport Security (HTTPS seulement)
<IfModule mod_headers.c>
    Header always set Strict-Transport-Security "max-age=31536000"
</IfModule>

# Protéger fichiers sensibles
<FilesMatch "^(\.env(\..*)?|composer\.(json|lock)|config\.php|\.cpanel\.yml)$">
    Require all denied
    <IfModule mod_headers.c>
        Header always set X-Content-Type-Options nosniff
    </IfModule>
</FilesMatch>
