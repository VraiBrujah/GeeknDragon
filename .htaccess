# Configuration Apache pour GeeknDragon
# Optimisation de performance et headers de cache

# Compression Gzip
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/json
</IfModule>

# Headers de cache pour les ressources statiques
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Images
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/avif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # Vidéos
    ExpiresByType video/mp4 "access plus 1 year"
    ExpiresByType video/webm "access plus 1 year"
    
    # CSS et JavaScript
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    
    # Fonts
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    
    # Documents
    ExpiresByType application/pdf "access plus 1 month"
    ExpiresByType application/json "access plus 1 hour"
    
    # Pages HTML (cache court)
    ExpiresByType text/html "access plus 1 hour"
</IfModule>

# Headers de cache manuels si mod_expires n'est pas disponible
<IfModule mod_headers.c>
    # Cache immutable pour les assets avec versioning
    <FilesMatch "\.(css|js|png|jpg|jpeg|webp|avif|svg|woff2|woff|ttf|mp4|webm)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    
    # Cache court pour JSON et HTML
    <FilesMatch "\.(json|html)$">
        Header set Cache-Control "public, max-age=3600"
    </FilesMatch>
    
    # Pas de cache pour les fichiers PHP
    <FilesMatch "\.php$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
</IfModule>

# Sécurité - Empêcher l'accès aux fichiers sensibles
<FilesMatch "\.(env|log|bak|backup|old|tmp)$">
    Order deny,allow
    Deny from all
</FilesMatch>

# Empêcher l'accès aux dossiers système
RedirectMatch 404 /\.git
RedirectMatch 404 /vendor
RedirectMatch 404 /node_modules
RedirectMatch 404 /cache

# MIME Types pour les nouveaux formats
<IfModule mod_mime.c>
    AddType image/webp .webp
    AddType image/avif .avif
    AddType font/woff2 .woff2
</IfModule>

# Réécriture d'URL pour les images optimisées (optionnel)
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Redirection automatique vers WebP si supporté
    RewriteCond %{HTTP_ACCEPT} image/webp
    RewriteCond %{REQUEST_FILENAME} \.(jpe?g|png)$
    RewriteCond %{REQUEST_FILENAME}\.webp -f
    RewriteRule ^(.+)\.(jpe?g|png)$ $1.$2.webp [T=image/webp,E=accept:1]
</IfModule>

# Protection contre l'exécution de PHP dans les dossiers d'upload
<Directory "images">
    <FilesMatch "\.php$">
        Order deny,allow
        Deny from all
    </FilesMatch>
</Directory>

<Directory "videos">
    <FilesMatch "\.php$">
        Order deny,allow
        Deny from all
    </FilesMatch>
</Directory>