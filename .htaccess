# Compression gzip pour les assets statiques
<IfModule mod_deflate.c>
    # Activer la compression pour les types de fichiers suivants
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE image/svg+xml

    # Exclure uniquement les images et fichiers déjà compressés
    SetEnvIfNoCase Request_URI \
        \.(?:gif|jpe?g|png|webp|ico)$ no-gzip dont-vary
    SetEnvIfNoCase Request_URI \
        \.(?:exe|t?gz|zip|bz2|sit|rar)$ no-gzip dont-vary
</IfModule>

# Canonicalisation de l'hôte et HTTPS
<IfModule mod_rewrite.c>
    RewriteEngine On

    # Rediriger www -> apex en HTTPS (une seule redirection)
    RewriteCond %{HTTP_HOST} ^www\.geekndragon\.com$ [NC]
    RewriteRule ^ https://geekndragon.com%{REQUEST_URI} [L,R=301]

    # Forcer HTTPS sur l'apex si appel en HTTP (sans proxy HTTPS)
    RewriteCond %{HTTP_HOST} ^geekndragon\.com$ [NC]
    RewriteCond %{HTTPS} !=on
    RewriteCond %{HTTP:X-Forwarded-Proto} !https
    RewriteRule ^ https://geekndragon.com%{REQUEST_URI} [L,R=301]

    # Redirections anciennes URLs produits
    RewriteRule ^lot10\.php$ /product.php?id=coin-traveler-offering [L,R=301]
    RewriteRule ^lot25\.php$ /product.php?id=coin-kingdom-currency [L,R=301]
    RewriteRule ^lot50-essence\.php$ /product.php?id=coin-kingdom-essence [L,R=301]
    RewriteRule ^lot50-tresorerie\.php$ /product.php?id=coin-merchant-treasury [L,R=301]
</IfModule>

# Mise en cache des assets statiques optimisé
<IfModule mod_expires.c>
    ExpiresActive On

    # Images - 1 an (versionnées via query string)
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"

    # CSS et JS - 1 an (versionnés via query string)
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType text/javascript "access plus 1 year"

    # Polices - 1 an (immuables)
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"

    # Vidéos - 1 mois
    ExpiresByType video/mp4 "access plus 1 month"
    ExpiresByType video/webm "access plus 1 month"

    # Documents dynamiques - pas de cache
    ExpiresByType text/html "access plus 0 seconds"
    ExpiresByType application/json "access plus 0 seconds"
</IfModule>

# Désactiver l'exécution PHP dans certains répertoires publics via règles locales
# (voir .htaccess spécifiques dans /media, /data, /logs, /cache, /scripts)

# Optimisation des en-têtes de cache et performance
<IfModule mod_headers.c>
    # Vary pour la compression
    <FilesMatch "\.(js|css|xml|gz)$">
        Header append Vary Accept-Encoding
    </FilesMatch>

    # Cache-Control pour assets statiques (1 an = immutables)
    <FilesMatch "\.(jpg|jpeg|png|webp|gif|svg|ico|woff2|woff)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>

    # Cache-Control pour vidéos avec Range support
    <FilesMatch "\.(mp4|webm)$">
        Header set Cache-Control "public, max-age=2592000"
        Header set Accept-Ranges "bytes"
    </FilesMatch>

    # Cache-Control pour CSS/JS versionnés
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>

    # HTML dynamique - pas de cache
    <FilesMatch "\.(php|html)$">
        Header set Cache-Control "no-cache, must-revalidate"
    </FilesMatch>

    # Sécurité - empêcher l'affichage des fichiers sensibles
    <FilesMatch "\.(env|md|log|txt)$">
        Header set X-Robots-Tag "noindex, nofollow"
    </FilesMatch>
</IfModule>

